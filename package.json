{
  "name": "@sudobility/entity_service",
  "version": "1.0.16",
  "description": "Shared entity/organization management library for multi-tenant workspaces",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware/hono": {
      "import": "./dist/middleware/hono.js",
      "types": "./dist/middleware/hono.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/entities.js",
      "types": "./dist/schema/entities.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.esm.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "verify": "bun run typecheck && bun run lint && bun run build",
    "prepublishOnly": "bun run clean && bun run verify"
  },
  "files": [
    "dist/**/*",
    "CLAUDE.md"
  ],
  "keywords": [
    "entity",
    "organization",
    "workspace",
    "multi-tenant",
    "hono",
    "drizzle"
  ],
  "author": "Sudobility",
  "license": "MIT",
  "peerDependencies": {
    "@sudobility/types": "^1.9.49",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "vitest": "^4.0.4",
    "@sudobility/types": "^1.9.49",
    "@types/bun": "latest",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "drizzle-orm": "^0.45.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "hono": "^4.10.0",
    "postgres": "^3.4.0",
    "prettier": "^3.7.0",
    "typescript": "^5.9.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
